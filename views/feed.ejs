<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<products.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/product/<%= products[i]._id%>">
              <img class="img-fluid" src="<%= products[i].image%>">
            </a>
          </li>
          <% if(Math.floor((products[i].expiryDate - Date.now())/(1000 * 60 * 60 * 24))
          > 3) { %>
          <p class="xsentence">
            Expires in <%= Math.floor((products[i].expiryDate - Date.now())/(1000 * 60 *
            60 * 24)) %> days!
          </p>
          <!-- 
            --less than 3 days to expiry (show hours left to expiry)
          -->
          <%} else if (Math.floor((products[i].expiryDate - Date.now())/(1000 * 60 * 60
          * 24)) < 3) { %>
          <p class="xsentence">
            Expires in <%= Math.floor((products[i].expiryDate - Date.now())/(1000 * 60 *
            60)) %> hours!
          </p>
          <!-- 
            -less than one hour to expiry (show minutes left to expiry)
          -->
          <%} else if (Math.floor((products[i].expiryDate - Date.now())/(1000 * 60)) <
          60) { %>
          <p class="expiryDate">
            Expires in <%= Math.floor((products[i].expiryDate - Date.now())/(1000 * 60))
            %> minutes!
          </p>
          <% } %>
          
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>